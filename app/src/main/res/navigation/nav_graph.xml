        android:name="com.example.polskakuchniatradycyjn.ReadyMealFragment"
        android:label="Gotowe Danie"
        tools:layout="@layout/fragment_ready_meal">
        <action
            android:id="@+id/action_readyMeal_to_summary"
            app:destination="@id/summaryFragment" />
    </fragment>

    <fragment
        android:id="@+id/customMealFragment"
        android:name="com.example.polskakuchniatradycyjn.CustomMealFragment"
        android:label="Komponuj Sam"
        tools:layout="@layout/fragment_custom_meal">
        <action
            android:id="@+id/action_customMeal_to_summary"
            app:destination="@id/summaryFragment" />
    </fragment>

</navigation>